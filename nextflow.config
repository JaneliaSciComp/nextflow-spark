params {
    runtime_opts = ''
    lsf_opts = ''
}

profiles {

    localdocker {
        docker {
            enabled = true
        }

        singularity {
            enabled = false
        }
    }

    localsingularity {
        docker {
            enabled = false
        }

        singularity {
            enabled = true
        }
    }

    lsf {
        process {
            executor = 'lsf'

            clusterOptions = params.lsf_opts
        }

        docker {
            enabled = false
        }

        singularity {
            enabled = true
        }

    }
}

docker {
    temp = "auto"
    runOptions = "${params.runtime_opts}"
}

singularity {
    autoMounts = true
    cacheDir = "$HOME/.singularity_cache"
    runOptions = "${params.runtime_opts}"
}

process.ext.sparkLocation = '/spark'

